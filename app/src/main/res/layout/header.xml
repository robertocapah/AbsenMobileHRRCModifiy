<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/batik_jumat_mini"
    android:orientation="vertical"
    android:gravity="bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@color/translucte"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_kalbe_phonegap"
            android:clickable="false"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ActivityDescription"
            android:background="@color/translucte"
            android:layout_alignLeft="@+id/profile_image"
            android:layout_alignStart="@+id/profile_image"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:text="Akash Bangad Akash Bangad Akash BangadAkash Bangad Akash Bangad Akash Bangad Akash Bangad Akash BangadAkash Bangad Akash Bangad"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="12dp" />

        <TextView
            android:id="@+id/ActivityDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/username"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/username"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:text="Akash.bangad93@gmail.com"
            android:textColor="#fff"
            android:background="@color/translucte"
            android:textSize="14sp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="12dp" />
    </LinearLayout>



</LinearLayout>